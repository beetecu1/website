---
import type { Lang } from '../../i18n/ui';
import { getNavItems } from '../../i18n/utils';
import LanguageSwitcher from '../common/LanguageSwitcher.astro';
import MobileMenu from './MobileMenu.astro';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const navItems = getNavItems(lang);
---

<header class="sticky top-0 z-50 bg-night-950/95 backdrop-blur-sm border-b border-night-700/50">
  <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <a
      href={navItems[0].href}
      class="font-title text-lg md:text-xl font-bold text-gold-400 hover:text-gold-300 transition-colors leading-tight"
    >
      {lang === 'es' ? 'La oscuridad ya no da miedo' : 'Darkness is no longer scary'}
    </a>

    <!-- Desktop nav -->
    <div class="hidden md:flex items-center gap-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-sm font-semibold text-night-200 hover:text-gold-400 transition-colors"
        >
          {item.label}
        </a>
      ))}
      <LanguageSwitcher lang={lang} />
    </div>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-night-200 hover:text-gold-400 transition-colors"
      aria-label={lang === 'es' ? 'Abrir menÃº' : 'Open menu'}
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <MobileMenu lang={lang} />
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    const isOpen = menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
  });

  // Close menu when clicking a link
  menu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      menu.classList.add('hidden');
      btn?.setAttribute('aria-expanded', 'false');
    });
  });
</script>
