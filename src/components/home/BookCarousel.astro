---
import type { Lang } from '../../i18n/ui';
import { useTranslations, getLocalizedPath } from '../../i18n/utils';
import { books, getLocalizedBookPath } from '../../i18n/books';
import BookCard from '../books/BookCard.astro';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-16 md:py-24 bg-gradient-to-b from-night-950 to-night-900">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="font-title text-3xl md:text-4xl font-bold text-gold-400 mb-12 text-center">
      {t('books.title')}
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {books.map((book) => (
        <BookCard book={book} lang={lang} />
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href={getLocalizedPath(lang, lang === 'es' ? '/libros' : '/books')}
        class="inline-block px-6 py-3 border-2 border-gold-500 text-gold-400 hover:bg-gold-500 hover:text-night-950 font-bold rounded-full transition-colors"
      >
        {t('books.seeAll')}
      </a>
    </div>
  </div>
</section>
