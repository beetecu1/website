---
import type { Lang } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-16 md:py-24 bg-night-950">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="font-title text-3xl md:text-4xl font-bold text-gold-400 mb-6">
      {t('series.title')}
    </h2>
    <p class="text-lg text-night-200 leading-relaxed max-w-2xl mx-auto">
      {t('series.description')}
    </p>
  </div>
</section>
