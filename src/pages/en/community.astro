---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import StarDecoration from '../../components/common/StarDecoration.astro';
import CommunityLinks from '../../components/community/CommunityLinks.astro';

const lang = 'en' as const;
const t = useTranslations(lang);
---

<BaseLayout title={t('community.title')} lang={lang} canonicalPath="/comunidad">
  <section class="relative py-12 md:py-20">
    <StarDecoration count={10} />
    <div class="relative z-10 max-w-4xl mx-auto px-4">
      <h1 class="font-title text-4xl md:text-5xl font-bold text-gold-400 text-center mb-4">
        {t('community.title')}
      </h1>
      <p class="text-night-200 text-lg text-center mb-4">
        {t('community.subtitle')}
      </p>
      <p class="text-night-300 text-center mb-12 max-w-2xl mx-auto">
        {t('community.description')}
      </p>

      <CommunityLinks lang={lang} />
    </div>
  </section>
</BaseLayout>
