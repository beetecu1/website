---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../i18n/utils';
import StarDecoration from '../components/common/StarDecoration.astro';

const lang = 'es' as const;
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'beetecu',
  alternateName: 'Elizabeth González',
  description: 'Mamá trabajadora de mellizos y autora de libros infantiles sobre miedos nocturnos',
  jobTitle: 'Autora de literatura infantil',
};
---

<BaseLayout title={t('about.title')} lang={lang} canonicalPath="/sobre-la-autora" jsonLd={jsonLd}>
  <section class="relative py-12 md:py-20">
    <StarDecoration count={10} />
    <div class="relative z-10 max-w-4xl mx-auto px-4">
      <h1 class="font-title text-4xl md:text-5xl font-bold text-gold-400 text-center mb-12">
        {t('about.title')}
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 items-start">
        <!-- Photo -->
        <div class="flex justify-center">
          <div class="w-48 h-48 md:w-full md:h-auto md:aspect-square rounded-full overflow-hidden border-4 border-gold-500/30">
            <img
              src={`${base}/images/author-placeholder.svg`}
              alt={t('about.subtitle')}
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Bio -->
        <div class="md:col-span-2">
          <h2 class="font-title text-2xl md:text-3xl font-bold text-white mb-4">
            {t('about.subtitle')}
          </h2>
          <div class="space-y-4">
            {t('about.bio').split('\n').filter(Boolean).map((paragraph) => (
              <p class="text-night-200 text-lg leading-relaxed">{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
